# Load local environment for development (git-ignored files)
# Prefer .env.local if present; fall back to .env
if [[ -f .env.local ]]; then
  set -a
  source ./.env.local
  set +a
elif [[ -f .env ]]; then
  set -a
  source ./.env
  set +a
fi

# Export required vars for this project
# Note: do NOT echo secrets
if [[ -z "$OPENWEATHERMAP_API_KEY" ]]; then
  echo "direnv: warning: OPENWEATHERMAP_API_KEY is not set. Set it in .env.local or .env" >&2
fi

